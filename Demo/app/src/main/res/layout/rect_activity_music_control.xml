<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ecf0f1"
                android:orientation="vertical"
                tools:context=".MainActivity"
                tools:deviceIds="wear_square">

    <ImageButton
        android:id="@+id/volume_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_toEndOf="@+id/start_stop"
        android:background="@null"
        android:onClick="click_volume_up_button"
        android:src="@drawable/vol_up_state"/>

    android:layout_marginBottom="22dp" />

    <ImageButton
        android:id="@+id/volume_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/volume_up"
        android:layout_toStartOf="@+id/start_stop"
        android:background="@null"
        android:onClick="click_volume_down_button"
        android:src="@drawable/vol_down_state"/>

    android:layout_marginTop="27dp" />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/start_stop"
        android:layout_toStartOf="@+id/text_artist"
        android:background="@null"
        android:onClick="click_previous_button"
        android:src="@drawable/prev_state"/>

    <ImageButton
        android:id="@+id/start_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/volume_down"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:onClick="click_stop_button"
        android:src="@drawable/resume_state"/>

    android:layout_alignStart="@+id/textView3" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/start_stop"
        android:layout_toEndOf="@+id/volume_up"
        android:background="@null"
        android:onClick="click_next_button"
        android:src="@drawable/next_state"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2c3e50"/>

    <TextView
        android:id="@+id/text_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_centerHorizontal="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#7f8c8d"/><![CDATA[



    android:layout_marginStart="19dp" />

]]>
</RelativeLayout>
